################################################################################
#                                     CONFIG                                   #
################################################################################

NAME        := push_swap
CC        := gcc
FLAGS    := -Wall -Wextra -Werror -g 
################################################################################
#                                 PROGRAM'S SRCS                               #
################################################################################

SRCS        :=      ps_moves.c \
                          array_initiation.c \
                          push_swap_utils_2.c \
                          pathfind_2.c \
                          pathfind_3.c \
                          push_swap.c \
                          push_swap_utils.c \
                          radix_sort.c \
                          rename_values.c \
                          pathfind.c \
                          ps_moves_2.c \
                          quick_sort.c \
                          barista_sort.c       

OBJS        := $(SRCS:.c=.o)

.c.o:
	${CC} ${FLAGS} -c $< -o ${<:.c=.o}

################################################################################
#                                  Makefile  objs                              #
################################################################################


CLR_RMV		:= \033[0m
RED		    := \033[1;31m
GREEN		:= \033[1;32m
YELLOW		:= \033[1;33m
BLUE		:= \033[1;34m
CYAN 		:= \033[1;36m
RM		    := rm -f

${NAME}:	${OBJS}
			@echo "$(GREEN)Compilation ${CLR_RMV}of ${YELLOW}$(NAME) ${CLR_RMV}..."
			${CC} ${FLAGS} -o ${NAME} ${OBJS}
			@echo "$(GREEN)$(NAME) created[0m âœ”ï¸"

all:		${NAME}

bonus:		all

clean:
			@ ${RM} *.o */*.o */*/*.o
			@ echo "$(RED)Deleting $(CYAN)$(NAME) $(CLR_RMV)objs âœ”ï¸"

fclean:		clean
			@ ${RM} ${NAME}
			@ echo "$(RED)Deleting $(CYAN)$(NAME) $(CLR_RMV)binary âœ”ï¸"

re:			fclean all

.PHONY:		all clean fclean re


